<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.controlsangre.sangre.BuscarPersona">

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/lvlitems"
        android:layout_below="@+id/ll"/>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ll">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="   Matricula"
        android:id="@+id/mat_txt"
        android:layout_marginRight="15dp"/>

    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceSmall"
    android:text="Hora E"
    android:id="@+id/hora_txt"
    android:layout_alignTop="@+id/mat_txt"
    android:layout_toRightOf="@+id/mat_txt"
    android:layout_toEndOf="@+id/mat_txt"
    android:layout_marginRight="15dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Min E"
        android:id="@+id/minut_txt"
        android:layout_alignTop="@+id/hora_txt"
        android:layout_toRightOf="@+id/hora_txt"
        android:layout_toEndOf="@+id/hora_txt"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Hora S"
        android:id="@+id/horas_txt"
        android:layout_alignTop="@+id/minut_txt"
        android:layout_toRightOf="@+id/minut_txt"
        android:layout_toEndOf="@+id/minut_txt"
        android:layout_marginLeft="15sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Min S"
        android:id="@+id/minuts_txt"
        android:layout_alignTop="@+id/horas_txt"
        android:layout_toRightOf="@+id/horas_txt"
        android:layout_toEndOf="@+id/horas_txt"
        android:layout_marginLeft="15sp"/>

    </LinearLayout>


</RelativeLayout>
